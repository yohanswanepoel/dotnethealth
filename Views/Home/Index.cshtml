@{
    ViewData["Title"] = "My FHIR Practice App - Blue";
}

@model PatientViewModel


<div class="container mt-4">
        <div class="row">
            <div class="col">
                <h2>Patients</h2>
                <ul>
                    @foreach (var patient in Model.Patients) {
                        <li><a href="/Home/Index/@patient.FhirId">@patient.Name</a></li>
                    }
                </ul>
            </div>
            @if(Model.SelectedPatient is not null){
            <div class="col-md-8">
                    <h2>@Model.SelectedPatient.Name - Patient Information</h2>
                    <ul>
                        <li>ID: @Model.SelectedPatient.Name</li>
                        <li>Active: @Model.SelectedPatient.Active</li>
                        <li>Gender: @Model.SelectedPatient.Gender.ToString() </li>
                        <li>Birth Date: @Model.SelectedPatient.BirthDate?.ToString("d")</li>
                        <li>Marital Status: @Model.SelectedPatient.MaritalStatus</li>
                        <!-- Add other patient details as needed -->
                    </ul>
            </div>
            }
        </div>

        

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
